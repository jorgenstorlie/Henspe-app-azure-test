<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="SplashTheme" parent="SplashTheme.Base">
        <item name="colorPrimary">@color/colorSplashPrimary</item>
        <item name="colorPrimaryDark">@color/colorSplashPrimaryDark</item>
        <item name="colorAccent">@color/colorSplashAccent</item>
    </style>
    <style name="SplashTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="AppThemeOnBoarding" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorOnboardingPrimary</item>
        <item name="colorPrimaryDark">@color/colorOnboardingPrimaryDark</item>
        <item name="android:textColor">@color/colorOnboardingText</item>
        <item name="colorAccent">@color/colorOnboardingAccent</item>
        <item name="colorButtonNormal">@color/colorOnboardingAccent</item>
        <item name="android:windowBackground">@color/colorOnboardingBackground</item>
        <item name="android:statusBarColor">@color/colorOnboardingStatusBar</item>
    </style>
    <style name="AppThemeDarkMaterial" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowBackground">@color/colorBackGround</item>
        <item name="android:colorEdgeEffect">@color/colorPrimary</item>
    </style>
    <style name="TabLayoutThemes" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_snla_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/color_snla_red</item>
    </style>
    <style name="Text.H6">
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_h6</item>
    </style>
    <style name="Text.Subtitle">
        <item name="android:fontFamily">@font/font_montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>
    <style name="Text.Subtitle2">
        <item name="android:fontFamily">@font/font_montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_subtitle2</item>
    </style>
    <style name="Text.Body">
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>
    <style name="Text.Body2">
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>
    <style name="Text.Body2.Secondary">
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>
    <style name="Text.Body2.Link">
        <item name="android:fontFamily">@font/font_montserrat_medium</item>
        <item name="android:textColor">@color/colorLinkText</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>
    <style name="Text.Button">
        <item name="android:fontFamily">@font/font_montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Text.Subheader">
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_subheader</item>
    </style>
    <style name="Text">
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
        <item name="android:textColor">@color/text_main</item>
    </style>
    <!--   old fonts remove later -->
    <style name="FontBase">
        <item name="android:textColor">@color/text_main</item>
    </style>
    <style name="FontMedium" parent="FontBase">
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
    </style>
    <style name="FontLight" parent="FontBase">
        <item name="android:fontFamily">@font/font_montserrat_light</item>
    </style>
    <style name="FontCondensed" parent="FontBase">
        <item name="android:fontFamily">@font/font_montserrat_regular</item>
    </style>
    <style name="HeaderText" parent="FontMedium">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
    </style>
    <style name="NormalText" parent="FontMedium">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="TextButton" parent="FontMedium">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="TextTitle" parent="FontCondensed">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="TextHeaderSubWhite">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="OnboardingTextTitle" parent="FontLight">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/colorOnboardingText</item>
    </style>
    <style name="OnboardingNormalText" parent="FontLight">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorOnboardingText</item>
    </style>
    <style name="OnboardingTextButton" parent="FontMedium">
        <item name="android:textColor">@color/colorOnboardingText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="ButtonStroked" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">true</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>
</resources>